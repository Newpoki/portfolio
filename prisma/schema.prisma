// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "mongodb"
    url      = env("DATABASE_URL")
}

model Project {
    id              String   @id @default(auto()) @map("_id") @db.ObjectId
    slug            String   @unique
    shortDesc       String
    githubUrl       String?
    websiteUrl      String?
    illustration    String
    illustrationAlt String
    deployedAt      DateTime
    name            String
    description     String
    bundler         String
    dataFetching    String
    language        String
    stateManagement String
    ui              String
}
