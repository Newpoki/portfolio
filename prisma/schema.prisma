// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "mongodb"
    url      = env("DATABASE_URL")
}

model Project {
    id              String   @id @default(auto()) @map("_id") @db.ObjectId
    slug            String   @unique
    shortDesc_en    String
    shortDesc_fr    String
    githubUrl       String?
    websiteUrl      String?
    illustration    String
    illustrationAlt String
    deployedAt      DateTime
    name            String
    description_en  String
    description_fr  String
    bundler         String
    dataFetching    String
    language        String
    stateManagement String
    ui              String
    isFavorite      Boolean?
}

enum ExperienceType {
    WORK
    DIPLOMA
    BIRTH
}

model Experience {
    id         String         @id @default(auto()) @map("_id") @db.ObjectId
    type       ExperienceType
    place      Json
    startedAt  DateTime
    title      String
    content_en String
    content_fr String
    endedAt    DateTime?
}
